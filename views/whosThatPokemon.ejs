<%- include("partials/header",{title: "whosthatpokemon" , secondRow:true}); %>
  <script src="/js/searchwhoisthatpokemon.js" defer></script>
  <script src="/js/whosThatPokemon.js" defer></script>

    <main class="container flex-column d-flex flex-wrap d-flex justify-content-center col-9 gap-4">
      <h1 class="text-center">Wie is deze Pokémon ?</h1>
      <article class="mx-auto flex-column d-flex col-8 relative-position custom-class">

        <!-- background image -->
        <img src="/images/Whoisthatpokemon.webp" class="img-fluid rounded mb-3 col-sm-12" alt="WhosThatPokemon">
        <% const randomPokemon=PokemonList[Math.round(Math.random() * PokemonList.length) - 1]; %>

        <!-- image to layer on top -->
        <img src="<%= randomPokemon.image %>" class="layered-img" alt="Pokémon Shadow">
        <% if (message=="FOUT" ){ %>
          <p id="ErrorWTP" class="d-flex justify-content-center m-0 rounded"><%- message %></p>
        <% }else { %>
          <p id="SuccessWTP" class="d-flex justify-content-center m-0 rounded"><%- message %></p>
        <% } %>

              <div class="pt-4 d-flex gap-2">

                <form class="container form-outline mx-auto p-0 d-flex flex-row gap-1" method="post" action="/whosthatpokemon">

                  <input type="search" id="form1" class="form-control" placeholder="WIE IS DEZE POKEMON?"
                    aria-label="Search" list="pokemonlist" name="pokeGuess" />

                  <datalist id="pokemonlist">
                    <% PokemonList.map(x=> {%><option>
                      <%= x.name.charAt(0).toUpperCase() + x.name.slice(1) %>
                      </option>
                    <%}); %>
                  </datalist>

                  <input type="hidden" name="correctPokemon" value="<%= randomPokemon.name %>">

                  <button id="buttonW" type="submit" formaction="/whosThatPokemon" class="btn btn-primary buttonForm1"
                    name="guesPokemon">POGING</button>

                </form>

              </div>
      </article>
    </main>

<%- include("partials/aside",{myPokemonPagina: false}); %>
<%- include("partials/footer"); %>


