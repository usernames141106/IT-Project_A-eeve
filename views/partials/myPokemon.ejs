<div class="col-12 col-sm-12 col-md-12 col-lg-5 col-xl-5 mt-5">
    <a href="/pokemonDetail?id=<%= id %>"><img id="myPokemonList"
            src="<%= img %>"
            , class="<%= owned ? "" : "opacity-50" %>" alt="Pokemon Image"></a>

    <table id="pokemonDetailTables" class="table table-hover">
        <tbody>
            <tr>
                <th>Nummer</th>
                <td><%= id %></td>
            </tr>
            <tr>
                <th>Naam</th>
                <td class="d-flex d-flex justify-content-between"><%= name %>
                </td>
            </tr>
            <% if(owned) { %>
            <tr>
                <td>Kies als huidige Pok√©mon</td>
                <td> <form>
                    <input id="myPokemonSelection" class="form-check-input" type="checkbox" value="" />
                </form></td>
            </tr>
            <% } %>
        </tbody>
    </table>

</div>