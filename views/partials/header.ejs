                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end pe-5" id="navbarSupportedContent">
                    <ul class="d-grid gap-2 d-flex">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-uppercase" href="#" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Login
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <form class="d-flex flex-column">
                                            <div class="mb-3">
                                              <input type="email" class="form-control border border-0 border-bottom" id="email" aria-describedby="emailHelp" placeholder="Email adress">
                                            </div>
                                            <div class="mb-3">
                                              <input type="password" class="form-control border border-0 border-bottom" id="password" placeholder="Password">
                                            </div>
                                            <button type="submit" class="btn btn-outline-primary">Login</button>
                                          </form>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-uppercase" href="#" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Register
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <form class="d-flex flex-column">
                                            <div class="mb-3">
                                              <input type="email" class="form-control border border-0 border-bottom" id="email" aria-describedby="emailHelp" placeholder="Email adress">
                                            </div>
                                            <div class="mb-3">
