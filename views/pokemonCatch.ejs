<%- include("partials/header",{title: "Pokemon vangen" , secondRow:true }); %>
  <main class="container col-9 d-flex justify-content-center text-center">
    <div class="container col-6 d-flex flex-column align-items-center">
      <h1><%= Pokemon.name %></h1>
      <img src="<%= Pokemon.image %>" alt="<%= Pokemon.name %>" width="400px">
      <% if(currentUser.pokemons.find(x => x.id == Pokemon.id)) { %>
          <a href="/pokemonRelease?id=<%= Pokemon.id %>"><img src="/images/pokeBallGreen.png" width="150px" alt="pokeball"></a>
          <p>Je kunt je pokemon vrijlaten door op de groene ball te druken.</p>
        <% } else { %>
          <a href="/pokemonCatch?attempt=<%= attempt + 1 %>&id=<%= Pokemon.id %>"><img src="/images/pokeBall.png" width="150px" alt="pokeball"></a>
          <p>Je hebt nog <%= 3 - attempt %> pogingen over om hem te vangen<%= attempt == 0 ? " (je kunt dit probeeren door op de rode ball te druken)" : "" %>.</p>
          <% } %>
    </div>
  </main>
<%- include("partials/aside",{myPokemonPagina: false}); %>
<%- include("partials/footer"); %>


