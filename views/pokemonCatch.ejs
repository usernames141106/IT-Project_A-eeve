<%- include("partials/header",{title: "Pokemon vangen" , secondRow:true }); %>
  <main class="container col-9 d-flex justify-content-center text-center">
    <div class="container col-6 d-flex flex-column align-items-center">
      <h1>
        <%= name %>
      </h1>
      <img src="/images/eevee.png" alt="eevee" width="400px">
      <% if(inBall) { %>
        <script defer>
          document.addEventListener('DOMContentLoaded', function () {
              var modal = document.getElementById('renameModal');
              if (modal) {
                  var bootstrapModal = new bootstrap.Modal(modal);
                  bootstrapModal.show();
              }
          });
      </script>
        <img src="/images/pokeBallGreen.png" width="150px" alt="pokeball">
        <form method="post" action="/pokemonCatch" class="modal fade" id="renameModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="renameModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="renameModalLabel">Nickname Pokemon</h1>
              </div>
              <div class="modal-body">
                <input class="border-bottom" type="text" name="nickname" id="nickname" value="<%= name %>" />
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-secondary" formaction="/pokemonCatch/useDefault">Use default</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </form>
        <% } else { %>
          <form action="/pokemonCatch" method="post"><button><img src="/images/pokeBall.png"
                width="150px" alt="pokeball"></button></form>
          <% } %>
    </div>
  </main>
  <%- include("partials/aside"); %>
    <%- include("partials/footer"); %>